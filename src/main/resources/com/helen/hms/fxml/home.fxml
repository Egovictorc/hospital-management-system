<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: rgba(255,255,255,.9);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.helen.hms.controller.HomeController">
   <children>
      <Label text="H &amp; A Specialist Hospital" textFill="#2e86c1">
         <font>
            <Font name="Brush Script MT Italic" size="70.0" />
         </font>
      </Label>
      <Label style="-fx-background-color: #fff;" text="...offering unbeatable medical services" textFill="#1a4664">
         <font>
            <Font name="Book Antiqua Italic" size="22.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <BorderPane prefWidth="800.0" VBox.vgrow="ALWAYS">
         <center>
            <Label alignment="CENTER" prefWidth="200.0" style="-fx-background-color: #fff;" text="Login as" textFill="#1a4664">
               <font>
                  <Font name="Book Antiqua" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </center>
         <left>
            <VBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Accountant">
                     <graphic>
                        <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/accountant.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MFXButton>
                  <MFXButton alignment="CENTER" contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Admin">
                     <graphic>
                        <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/admin.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor> 
                  </MFXButton>
               </children>
            </VBox>
         </left>
         <right>
            <VBox spacing="100.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Nurse">
                     <graphic>
                        <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/nurse.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MFXButton>
                  <MFXButton contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Doctor">
                     <graphic>
                        <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/doctor.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MFXButton>
               </children>
            </VBox>
         </right>
         <VBox.margin>
            <Insets left="100.0" right="100.0" />
         </VBox.margin>
         <top>
            <MFXButton contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Human Resource" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/receptionist.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </MFXButton>
         </top>
         <bottom>
            <MFXButton contentDisplay="TOP" defaultButton="true" onMouseClicked="#onMouseClicked" rippleColor="#793c3c" text="Receptionist" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="300.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/receptionist.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </MFXButton>
         </bottom>
      </BorderPane>
      <MFXButton fx:id="signup" onMouseClicked="#onMouseClicked" style="-fx-background-color: #fff;" text="Don't have account? Sign up" textFill="#1a4664">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="20.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </MFXButton>
   </children>
   <padding>
      <Insets bottom="10.0" />
   </padding>
</VBox>
